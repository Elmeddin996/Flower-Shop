@model SliderUpdateRequest
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>Update</h1>
        </div>
        <div class="col-md-8">
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input class="form-control" asp-for="Order">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <input class="form-control" asp-for="Desc">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input class="form-control" asp-for="Image">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
